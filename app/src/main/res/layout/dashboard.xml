<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_label"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/dashboard_label_text_size" />

    <Button
        android:layout_width="@dimen/dashboard_button_width"
        android:layout_height="@dimen/dashboard_button_height"
        android:layout_marginTop="@dimen/dashboard_button_margin_top"
        android:text="@string/dashboard_button_label"
        android:textAllCaps="false"
        android:textSize="@dimen/dashboard_button_text_size" />

</LinearLayout>